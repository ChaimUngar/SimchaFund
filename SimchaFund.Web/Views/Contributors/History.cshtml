@using SimchaFund.Data;
@model HistoryViewModel

<body>
   
    <div b-2ya7vgwtda="" class="container">
        <main b-2ya7vgwtda="" role="main" class="pb-3" style="margin-top: 60px;">

            <div class="header">
                <h1>History for @Model.Name</h1>
                <h3>Current Balance: @Model.CurrentBalance.ToString("C")</h3>
            </div>

            <div class="row header">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Date</th>
                                <th>Amount</th>
                            </tr>
                        </thead>

                        <tbody>
                            
                            @foreach (var h in Model.History)
                            {
                                <tr>
                                    <td>
                                        @h.Action
                                    </td>
                                    <td style="text-align: center; vertical-align: middle;">
                                        @h.Date.ToLongDateString()
                                    </td>
                                    <td style="text-align: center; vertical-align: middle;">
                                        @h.Amount.ToString("C")
                                    </td>
                                </tr>
                            }

                           
                            
                           
                            
                           
                           
                        </tbody>
                    </table>
                </div>
            </div>

            <div style="text-align:center;">
                <a class="btn btn-lg btn-danger" href="/contributors">Back to Contributors</a>
            </div>
        </main>
    </div>

</body>