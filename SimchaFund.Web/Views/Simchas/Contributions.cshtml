@model UpdatePageViewModel

<body>
   
    <div b-2ya7vgwtda="" class="container">
        <main b-2ya7vgwtda="" role="main" class="pb-3" style="margin-top: 60px;">

            <div class="header">
                <h1>
                    Contributors for the @Model.SimchaName simcha
                </h1>
            </div>
            <div class="table-responsive">
                <form method="POST" action="/simchas/update">
                    <input type="hidden" name="simchaId" value="@Model.SimchaId">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Contribute</th>
                                <th>Name</th>
                                <th>Balance</th>
                                <th>Always Include</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.ContribInfo)
                            {
                                int index = 0;
                                <input type="hidden" name="contributors[@index].ContributorId" value="@c.Contributor.Id">
                                <tr>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <div class="form-check form-switch">
                                                <input style="width: 4rem; height: 2rem;" name="contributors[@index].Include" class="form-check-input" type="checkbox" checked="" value="true">
                                            </div>
                                        </div>
                                    </td>
                                    <td>@c.Contributor.FirstName @c.Contributor.LastName</td>
                                    <td>@c.Balance.ToString("C")</td>
                                    <td style="text-align: center;">
                                        @if(c.Contributor.AlwaysInclude)
                                        {
                                            <i style="font-size:30px" class="bi bi-check"></i>
                                        }
                                    </td>
                                    <td>
                                        <input type="text" name="contributors[@index].amount" class="form-control" value="5">
                                    </td>
                                </tr>

                            }                        
                        </tbody>
                    </table>
                    <div style="text-align:center;">
                        <button class="btn-lg btn-danger">Update</button>
                    </div>
                </form>
            </div>

        </main>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js?v=BxFAw9RUJ1E4NycpKEjCNDeoSvr4RPHixdBq5wDnkeY"></script>



</body>